<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kelaut.fisherman">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kelaut_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/kelaut_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fisherman">

        <activity android:name=".view.SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.HomeActivity" />
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".view.BaseActivity" />
        <activity android:name=".view.service.ServiceAddActivity" />
        <activity android:name=".view.service.ServiceDetailsActivity" />
        <activity android:name=".view.service.ServiceEditActivity" />
    </application>

</manifest>